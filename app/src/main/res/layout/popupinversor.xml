<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    android:padding="5dp"
    android:layout_gravity="center">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="350dp"
    android:layout_height="500dp"
    android:background="@drawable/bordas"
    android:padding="5dp"
    android:layout_marginTop="115dp"
    android:layout_gravity="center">
    <TextView
        android:id="@+id/txtfechar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textColor="#FFFF"
        android:text="X"
        android:textStyle="bold"
        android:layout_gravity="end"
        android:gravity="center"
        android:background="@drawable/cerclebackground"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/icone_resultado"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:src="@drawable/popuprev" />

        <TextView
            android:id="@+id/nome_bixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Bixinho Raixoso"
            android:textColor="#FFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/nick_bixo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:text="Brasinha"
            android:textColor="#FFF" />
    </LinearLayout>

    <LinearLayout

        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/box_msg"
            android:background="@drawable/buttonstyle"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp">


            <TextView
                android:id="@+id/mensagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensagem Invertida:"
                android:textColor="#FFF"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/resultado_aleatorio"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#FFF"
                android:text="Alguma coisa"
                android:textAlignment="center"
                android:textSize="18sp" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnfollow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fechar"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonstyle"
        android:textColor="#FFF"/>

</LinearLayout>
</LinearLayout>