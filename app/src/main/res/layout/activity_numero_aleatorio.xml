<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/montanha"
    android:layout_gravity="center"
    >

    <LinearLayout
        android:id="@+id/linear"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="40dp"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:layout_width="350dp"
        android:layout_height="600dp"
        tools:context=".NumeroAleatorio"
        android:background="@drawable/fundo"
        android:layout_weight="1"
        >

        <ImageView

            android:id="@+id/icontheme"
            android:layout_width="202dp"
            android:layout_height="202dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="8dp"
            android:src="@drawable/icmob"
            android:layout_gravity="center_horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="44dp"
            android:layout_gravity="center_horizontal"
            android:text="Horrahh!"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/icontheme" />

        <TextView
            android:id="@+id/subtitlepage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_gravity="center_horizontal"
            android:text="Gerador de números aleatórios!"
            android:textColor="#F8F3F3"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.494"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView3" />

        <TextView
            android:id="@+id/info_aleatorios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#FDFDFD"
            android:text="Insira um intervalo, início e fim, respectivamente."
            android:textAlignment="center"
            android:layout_gravity="center_horizontal"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"

            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:gravity="center">

            <EditText
                android:id="@+id/inicio_faixa"
                android:layout_width="100dp"
                android:layout_height="45dp"

                android:background="@drawable/bgwhite"
                android:ems="10"
                android:inputType="number"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="#2f333f"

                />

            <EditText
                android:id="@+id/fim_faixa"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:background="@drawable/bgwhite"
                android:layout_marginStart="60dp"
                android:inputType="number"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="#2f333f"
                android:layout_toRightOf="@+id/inicio_faixa"


                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="30dp"
            android:gravity="center">
            <Button
                android:id="@+id/btn_gerar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginStart="65dp"
                android:background="@drawable/bgwhite"
                android:elevation="7dp"
                android:text="Gerar"
                android:textAllCaps="false"
                android:textColor="#2f333f"
                android:textSize="20sp"
                android:layout_toRightOf="@+id/btn_voltar"
                />

            <Button
                android:id="@+id/btn_voltar"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:background="@drawable/bgwhite"
                android:elevation="7dp"
                android:text="Voltar"
                android:textAllCaps="false"
                android:textColor="#2f333f"
                android:textSize="20sp"
                />

        </RelativeLayout>


    </LinearLayout>

</LinearLayout>